[app]

# Nome dell'app
title = Giacomo Nero

# Nome del package (formato: com.dominio.nomeapp)
package.name = giacomonero

# Dominio del package
package.domain = com.blackjack

# Directory sorgente
source.dir = .

# Main file
source.include_exts = py,png,jpg,kv,atlas

# Versione
version = 1.0

# Requisiti Python
requirements = python3,kivy,kivymd

# Orientamento (portrait = verticale, landscape = orizzontale)
orientation = portrait

# Servizi
# android.permissions = INTERNET

# Icona (opzionale, puoi aggiungere un'icona)
# icon.filename = %(source.dir)s/icon.png

# Splash screen (opzionale)
# presplash.filename = %(source.dir)s/presplash.png

# Android API
android.api = 31
android.minapi = 21
android.ndk = 25b
android.sdk = 31

# Colore del tema
android.presplash_color = #0f1419

# Abilita fullscreen
fullscreen = 0

[buildozer]

# Log level
log_level = 2

# Pulisci prima di compilare
# warn_on_root = 1
